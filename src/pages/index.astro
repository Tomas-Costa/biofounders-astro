					<iframe loading="lazy" class="aspect-[9/16] w-full" src="https://fast.wistia.net/embed/iframe/782997tbkq?web_component=true&seo=true&videoFoam=false"></iframe>
				</div>
				<div class="mt-8">
					<a href="" class="bf-btn">Agendar Consulta Gratuita »</a>
					<p class="text-white/80 text-center mt-2">¡Ultimas plazas del mes!</p>
				</div>
			</div>
		</section>
		<section class="py-[60px] bg-white px-4">
		  <div class="max-w-[600px] mx-auto">
			<p class="text-[#111]">
			  Copy muy bueno
			</p>
		  </div>
		</section>		
		<Faqs />
		<img class="h-[35px] md:h-[45px] object-contain mx-auto mb-8" src="/images/biofounders.png" alt="Bio Founders" />
